<UserControl x:Class="HMI.UserControls.WorkModeOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="http://inosoft.com/visiwin7"
         Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">

    <Grid >
        <Border Background="{DynamicResource MainViewBackgroundBrush}"  CornerRadius="5" Margin="0,14,0,0">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource FP_Gray_C}"/>
            </Border.Effect>
        </Border>

        <GroupBox x:Name="H" FontWeight="Bold" FontSize="20" Foreground="White"  BorderThickness="2" BorderBrush="{DynamicResource FP_Dark}">

            <StackPanel Orientation="Horizontal" Margin="10,5,10,10" >
                <vw:Button x:Name="btnstart" Height="60" Width="160" Style="{DynamicResource B_Gray_Green}" BlinkBrush="{DynamicResource FP_LightGreen_Gradient}" Click="btnstart_Click" />
                <vw:Key x:Name="btnstop" Height="60" Width="160" Margin="10,0,0,0" Style="{DynamicResource B_Red}" KeyMode="KeyMode" />
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
