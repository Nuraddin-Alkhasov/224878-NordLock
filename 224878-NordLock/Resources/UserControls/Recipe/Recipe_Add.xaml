<UserControl x:Class="HMI.UserControls.Recipe_Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vw="http://inosoft.com/visiwin7"
             Background="Transparent" Margin="0,0,10,0">

    <Grid x:Name="Layout" Opacity="0" Loaded="UserControl_Loaded">
        
        <Rectangle Fill="{x:Null}" Stroke="{DynamicResource FP_Dark}" StrokeThickness="3" StrokeDashArray="2" RadiusX="5" RadiusY="5" />
        <vw:Button x:Name="Addbtn"  SymbolResourceKey="D_Add" Height="155" BorderThickness="0"  Style="{DynamicResource B_Dashboard_Add}"/>

    </Grid>
</UserControl>
